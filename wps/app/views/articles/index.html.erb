<h1>Listing articles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Other authors</th>
      <th>Reviewer</th>
      <th>Review</th>
      <th>Contents</th>
      <th>Category</th>
      <th>Accepted</th>
      <th>Copyright</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.author %></td>
        <td><%= article.other_authors %></td>
        <td><%= article.reviewer %></td>
        <td><%= article.review %></td>
        <td><%= article.contents %></td>
        <td><%= article.category %></td>
        <td><%= article.accepted %></td>
        <td><%= article.copyright %></td>
        <td><%= article.published %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
